{%extends "loginbase.jinja2"%}

{%block title%}
  Create a new project
{%endblock%}

{%block body%}

<section id="new_project">
  <div class="container new-project">
    <form role="form" id="new-project-form" action="{{url_for('project')}}" method="POST">
      <!-- Logo -->
      <div class="col-lg-12 logo-vc3">
          <img width="100" class="logo" src="https://image.ibb.co/e59s3v/logosmall.png" alt="Logo" />
      </div>
      <h3>Create a New Project</h3>
      <h4>A project contains all the allocations and resource requests from your research</h4>
      <fieldset>
        <label for="projectName">Project Name</label>
        <input
          placeholder="Your Project name"
          name="projectName"
          type="text"
          tabindex="1"
          required
          autofocus
          value="">
      </fieldset>
      <fieldset>
        <label for="projectScience">Field of Science</label>
        <input
          placeholder="Your Field of Science (e.g. High Energy Physics)"
          name="projectScience"
          type="text"
          tabindex="2"
          required
          autofocus
          value=""
        >
      </fieldset>
      <fieldset>
        <label for="projectDescription">Project Description</label>
        <textarea
          placeholder="Enter description here...(optional)"
          name="projectDescription"
          tabindex="3"
          value="projectDescription"></textarea>
      </fieldset>
      <fieldset>
        <button type="submit" id="create-project" data-submit="...Sending">Create Project</button>
      </fieldset>
    </form>
  </div> <!-- project container -->
</section>

{%endblock%}
